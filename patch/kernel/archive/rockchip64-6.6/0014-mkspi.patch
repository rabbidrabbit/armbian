---
 arch/arm64/boot/dts/rockchip/rk3328-mkspi.dts | 41 ++++++++++
 1 file changed, 41 insertions(+)

diff --git a/arch/arm64/boot/dts/rockchip/rk3328-mkspi.dts b/arch/arm64/boot/dts/rockchip/rk3328-mkspi.dts
index e29fdc527..0c131fa6e 100755
--- a/arch/arm64/boot/dts/rockchip/rk3328-mkspi.dts
+++ b/arch/arm64/boot/dts/rockchip/rk3328-mkspi.dts
@@ -340,10 +340,16 @@ usb20_host_drv: usb20-host-drv {
 	sd {
 		sdio_vcc_pin: sdio-vcc-pin {
 			rockchip,pins = <2 RK_PC4 RK_FUNC_GPIO &pcfg_pull_up>;
 		};
 	};
+
+	spi0_cs2 {
+		pinctrl_spi0_cs2: pinctrl_spi0_cs2 {
+			rockchip,pins = <1 RK_PC2 RK_FUNC_GPIO &pcfg_pull_up>;
+ 		};
+ 	};
 };
 
 &sdmmc {
 	bus-width = <4>;
 	cap-mmc-highspeed;
@@ -390,10 +396,11 @@ &u2phy_host {
 &u2phy_otg {
 	status = "okay";
 };
 
 &uart0 {
+	pinctrl-0 = <&uart0_xfer &uart0_cts>;
 	status = "okay";
 };
 
 &uart1 {
 	status = "okay";
@@ -427,10 +434,44 @@ &vop {
 
 &vop_mmu {
 	status = "okay";
 };
 
+&spi0 {
+	max-freq = <48000000>;
+	cs-gpios = <&gpio3 RK_PB0 GPIO_ACTIVE_LOW>,<&gpio3 RK_PA7 GPIO_ACTIVE_LOW>,<&gpio1 RK_PC2 GPIO_ACTIVE_LOW>;
+	pinctrl-0 = <&spi0m2_clk &spi0m2_tx &spi0m2_rx>;
+	status = "okay";
+
+	spi_for_lcd@0 {
+		compatible ="armbian,spi-dev";
+		pinctrl-names ="default";
+		pinctrl-0 = <&pinctrl_st7796_cs>;
+		reg = <0>;
+		spi-max-frequency = <24000000>;
+		status = "disabled";
+	};
+
+	spi_for_touch@1 {
+		reg = <1>;
+		compatible ="armbian,spi-dev";
+		pinctrl-names ="default";
+		pinctrl-0 = <&pinctrl_tsc2046_pendown &pinctrl_tsc2046_cs>;
+		spi-max-frequency = <2000000>;
+		status = "disabled";
+	};
+
+	spi_for_cs2@2 {
+		reg = <2>;
+		compatible ="armbian,spi-dev";
+		pinctrl-names ="default";
+		pinctrl-0 = <&pinctrl_spi0_cs2>;
+		spi-max-frequency = <5000000>;
+		status = "okay";
+	};
+};
+
 / {
 	memory@200000 {
 		device_type = "memory";
 		reg = <0x00 0x200000 0x00 0x3fe00000>;
 	};
